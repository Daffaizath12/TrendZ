<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Judul -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VERIFY\nACCOUNT"
        android:textSize="30sp"
        android:textColor="#000000"
        android:fontFamily="@font/bold"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="50dp" />

    <!-- Deskripsi -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="please enter the code we just sent to email \n Example@gmail.com"
        android:textSize="12sp"
        android:fontFamily="@font/opensans_reguler"
        android:textColor="#8A8A8E"
        android:layout_below="@id/tvTitle"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <!-- Input Kode 4 Digit -->
    <LinearLayout
        android:id="@+id/codeContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_below="@+id/tvDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etCode1"
            style="@style/CodeInputStyle"/>
        <EditText
            android:id="@+id/etCode2"
            style="@style/CodeInputStyle"/>
        <EditText
            android:id="@+id/etCode3"
            style="@style/CodeInputStyle"/>
        <EditText
            android:id="@+id/etCode4"
            style="@style/CodeInputStyle"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvdidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didnâ€™t get a code?"
        android:textSize="12sp"
        android:fontFamily="@font/opensans_reguler"
        android:textColor="#8A8A8E"
        android:layout_below="@id/codeContainer"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvresend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend Code"
        android:fontFamily="@font/opensans_bold"
        android:textColor="#A07E28"
        android:textSize="16sp"
        android:layout_below="@id/tvdidget"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <!-- Button Login di bawah layar -->
    <Button
        android:id="@+id/btnverify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verifiy"
        android:textSize="16sp"
        android:fontFamily="@font/opensans_bold"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/black"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_margin="20dp"/>

</RelativeLayout>
