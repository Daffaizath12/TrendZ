<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    android:background="#FFFFFF">

    <!-- "Create an account" di pojok kanan atas -->
    <TextView
        android:id="@+id/tvCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an account"
        android:fontFamily="@font/opensans_bold"
        android:textColor="#A07E28"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <!-- Judul LOGIN -->
    <TextView
        android:id="@+id/tvLoginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textSize="36sp"
        android:fontFamily="@font/bold"
        android:textColor="#000000"
        android:layout_below="@id/tvCreateAccount"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/logindeskription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your e-mail account and password to browse â€¨ Tren-z collection"
        android:textSize="12sp"
        android:fontFamily="@font/opensans_reguler"
        android:textColor="#8A8A8E"
        android:layout_below="@id/tvLoginTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <!-- Input Email -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="12sp"
        android:fontFamily="@font/opensans_reguler"
        android:textColor="#8A8A8E"
        android:layout_below="@id/logindeskription"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:background="@android:drawable/edit_text" />

    <!-- Input Password -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textSize="12sp"
        android:fontFamily="@font/opensans_reguler"
        android:textColor="#8A8A8E"
        android:inputType="textPassword"
        android:layout_below="@id/etEmail"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="@android:drawable/edit_text" />

    <!-- Checkbox + Forgot Password -->
    <LinearLayout
        android:id="@+id/rememberForgotLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/etPassword"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:weightSum="1">

        <CheckBox
            android:id="@+id/checkboxRemember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay Signed In"
            android:fontFamily="@font/opensans_reguler"
            android:textSize="12sp"
            android:textColor="#8A8A8E"
            android:buttonTint="#A07E28"
            android:layout_weight="0.5" />

        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password ?"
            android:textColor="#8A8A8E"
            android:fontFamily="@font/opensans_reguler"
            android:layout_gravity="end"
            android:layout_weight="0.5"
            android:gravity="end" />
    </LinearLayout>

    <!-- Terms & Conditions -->
    <TextView
        android:id="@+id/atasbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By signing in you accept our Terms &amp; Condition and privacy policy."
        android:textSize="12sp"
        android:fontFamily="@font/opensans_reguler"
        android:textColor="#8A8A8E"
        android:layout_above="@id/btnLogin"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginBottom="4dp" />

    <!-- Button Login di bawah layar -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/black"
        android:textColor="#FFFFFF"
        android:padding="12dp" />
</RelativeLayout>
